<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/header_wrap"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="5.0dip"
    android:visibility="gone">

    <RelativeLayout
        android:id="@id/evt_wrap"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:visibility="gone">

        <com.gitrose.bukinghotel.view.ToughViewPager
            android:id="@id/event_pager"
            android:layout_width="wrap_content"
            android:layout_height="80.0dip" />

        <LinearLayout
            android:id="@id/page_mark"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/slide_wrap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:visibility="gone">

        <com.gitrose.bukinghotel.view.ToughViewPager
            android:id="@id/fixed_pager"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" />

        <ImageView
            android:layout_width="156.0dip"
            android:layout_height="60.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/label_today_hotel" />
    </RelativeLayout>
</LinearLayout>